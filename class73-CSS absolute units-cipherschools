p{
    /* font-size:16px; */
    font-size:32px;
    font-size:96px;
    /* 1 inch == 96px*/
    font-size: 1in;
    /* 1in==2.54cm */
    font-size: 2.54cm;
    /* 1 px == 0.75pt */
    /* 16 px == 0.75*16(12) */
    font: size 12pt;
    /* border:2px solid red; */
    border:12pt solid red;
}